<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <include layout="@layout/title_bar"></include>

    <RelativeLayout
        android:id="@+id/rl_main_search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.xuexiang.xui.widget.spinner.materialspinner.MaterialSpinner
            android:id="@+id/ms_search_type"
            style="@style/Material.SpinnerStyle"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="20dp"
            android:enabled="true"
            app:ms_entries="@array/search_type" />

        <EditText
            android:id="@+id/et_search_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/btn_search_content"
            android:layout_toRightOf="@id/ms_search_type"
            android:hint="输入查找的课程名称" />

        <com.xuexiang.xui.widget.button.roundbutton.RoundButton
            android:id="@+id/btn_search_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:text="搜索"
            android:textColor="@color/white"
            app:rb_backgroundColor="@color/blue_color" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_my_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="15dp"
        android:text="我的课程"
        android:textSize="20sp">
    </TextView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fcf0c0"
        android:scrollbars="none">
    </ScrollView>


