<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.admin.AdminTextbookActivity">

    <include layout="@layout/title_bar" />

    <com.xuexiang.xui.widget.button.RippleView
        android:id="@+id/btn_add_textbook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        app:rv_type="simpleRipple">

        <TextView
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@color/emerald"
            android:gravity="center"
            android:text="新增教辅"
            android:textColor="@color/xui_config_color_white"
            android:textSize="20sp" />

    </com.xuexiang.xui.widget.button.RippleView>

    <RelativeLayout
        android:id="@+id/rl_textbook_search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_add_textbook"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.xuexiang.xui.widget.spinner.materialspinner.MaterialSpinner
            android:id="@+id/ms_search_type"
            style="@style/Material.SpinnerStyle"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="20dp"
            android:enabled="true"
            app:ms_entries="@array/search_type" />

        <EditText
            android:id="@+id/et_search_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/btn_search_content"
            android:layout_toRightOf="@id/ms_search_type"
            android:hint="输入查找的课程名称" />

        <com.xuexiang.xui.widget.button.roundbutton.RoundButton
            android:id="@+id/btn_search_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:text="搜索"
            android:textColor="@color/white"
            app:rb_backgroundColor="@color/blue_color" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ScrollView>



</RelativeLayout>