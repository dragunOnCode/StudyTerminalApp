<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.student.HomeworkAnalysisActivity">

    <include layout="@layout/title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="5dp"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="作业得分："
                    android:textSize="16sp"
                    android:textColor="@color/smoky_black"/>
                <TextView
                    android:id="@+id/tv_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/price_red"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"/>
                <TextView
                    android:id="@+id/tv_total_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/price_red"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_correct_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_score"
                android:layout_marginVertical="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="正确率"
                    android:textSize="20sp"
                    android:layout_marginHorizontal="10dp"/>
                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pc_correct_rate"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_answer_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_correct_rate"
                android:layout_marginVertical="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="作答时长"
                    android:textSize="20sp"
                    android:layout_marginHorizontal="10dp"/>
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/bc_answer_time"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_keyword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_answer_time"
                android:layout_marginVertical="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="知识点分布"
                    android:textSize="20sp"
                    android:layout_marginHorizontal="10dp"/>
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/bc_keyword"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"/>
            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>