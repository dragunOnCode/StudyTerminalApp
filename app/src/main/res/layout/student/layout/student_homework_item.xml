<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/almond_white"
    android:layout_margin="5dp"
    android:paddingHorizontal="10dp">

    <TextView
        android:id="@+id/tv_homework_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="null"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginVertical="5dp"
        android:textColor="@color/smoky_black"/>

    <LinearLayout
        android:id="@+id/ll_open_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_homework_name"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开放时间"
            android:layout_marginVertical="5dp"
            android:textColor="@color/smoky_black"/>

        <TextView
            android:id="@+id/tv_open_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp"
            android:text="yyyy-MM-dd"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_marginVertical="5dp"
            android:textColor="@color/smoky_black"/>

        <TextView
            android:id="@+id/tv_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp"
            android:text="yyyy-MM-dd"/>

        <TextView
            android:id="@+id/tv_open_date_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp" />
    </LinearLayout>

</RelativeLayout>