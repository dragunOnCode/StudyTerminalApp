<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.admin.AddTextbookActivity">

    <include layout="@layout/title_bar" />

    <androidx.legacy.widget.Space
        android:id="@+id/space1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="55dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/space1"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:background="@color/ps_color_half_white"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_textbook_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="教辅名称"
            android:textColor="@color/smoky_black"
            android:textSize="14sp" />

        <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
            android:id="@+id/et_textbook_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_textbook_name"
            android:layout_marginHorizontal="40dp"
            android:hint="输入教辅名称"
            app:met_allowEmpty="false"
            app:met_autoValidate="true"
            app:met_errorEmpty="@string/error_empty" />

        <TextView
            android:id="@+id/tv_course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_textbook_name"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="50dp"
            android:text="科目"
            android:textColor="@color/smoky_black"
            android:textSize="14sp" />

        <com.xuexiang.xui.widget.spinner.materialspinner.MaterialSpinner
            android:id="@+id/ms_course_name"
            style="@style/Material.SpinnerStyle"
            android:layout_width="wrap_content"
            android:layout_below="@id/tv_course_name"
            android:layout_marginTop="5dp"
            android:enabled="true"
            app:ms_entries="@array/subject_type" />

        <TextView
            android:id="@+id/tv_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_textbook_name"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@id/tv_course_name"
            android:text="年级"
            android:textColor="@color/smoky_black"
            android:textSize="14sp" />

        <com.xuexiang.xui.widget.spinner.materialspinner.MaterialSpinner
            android:id="@+id/ms_grade"
            style="@style/Material.SpinnerStyle"
            android:layout_width="wrap_content"
            android:layout_below="@id/tv_grade"
            android:layout_marginHorizontal="100dp"
            android:layout_marginTop="5dp"
            android:enabled="true"
            app:ms_entries="@array/grade_type" />

        <TextView
            android:id="@+id/tv_textbook_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_grade"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="40dp"
            android:text="作者信息"
            android:textColor="@color/smoky_black"
            android:textSize="14sp" />

        <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
            android:id="@+id/et_textbook_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_textbook_author"
            android:layout_marginHorizontal="40dp"
            android:hint="输入作者名称"
            app:met_allowEmpty="false"
            app:met_autoValidate="true"
            app:met_errorEmpty="@string/error_empty" />

        <TextView
            android:id="@+id/tv_press_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_textbook_author"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="40dp"
            android:text="出版社"
            android:textColor="@color/smoky_black"
            android:textSize="14sp" />

        <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
            android:id="@+id/et_press_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_press_name"
            android:layout_marginHorizontal="40dp"
            android:hint="输入出版社名称"
            app:met_allowEmpty="false"
            app:met_autoValidate="true"
            app:met_errorEmpty="@string/error_empty" />

        <TextView
            android:id="@+id/tv_textbook_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_press_name"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="40dp"
            android:text="定价" />

        <com.xuexiang.xui.widget.edittext.ValidatorEditText
            android:id="@+id/et_textbook_price"
            style="@style/EditText.Normal"
            android:layout_width="300dp"
            android:layout_below="@id/tv_textbook_price"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="5dp"
            android:hint="输入定价，最多支持小数点后两位"
            android:singleLine="true"
            app:met_autoValidate="true"
            app:vet_errorMessage="@string/tip_number_only_error_message"
            app:vet_regexp="@string/regexp_number_only"
            app:vet_tipPosition="top" />

        <TextView
            android:id="@+id/tv_textbook_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_textbook_price"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="40dp"
            android:text="内容简介"
            android:textColor="@color/smoky_black"
            android:textSize="14sp" />


        <com.xuexiang.xui.widget.edittext.MultiLineEditText
            android:id="@+id/et_textbook_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_textbook_description"
            android:layout_marginTop="4dp"
            app:mlet_maxCount="120" />

        <com.xuexiang.xui.widget.button.RippleView
            android:id="@+id/btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_textbook_description"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            app:rv_type="simpleRipple">

            <TextView
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@color/emerald"
                android:gravity="center"
                android:text="确认新增"
                android:textColor="@color/xui_config_color_white"
                android:textSize="18sp" />

        </com.xuexiang.xui.widget.button.RippleView>
    </RelativeLayout>

</RelativeLayout>