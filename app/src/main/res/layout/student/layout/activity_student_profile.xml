<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.student.StudentProfileActivity">

    <include layout="@layout/title_bar" />

    <RelativeLayout
        android:id="@+id/rl_profile_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_bar"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/iv_profile_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp" />

        <Button
            android:id="@+id/btn_upload_profile_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_profile_pic"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="上传头像" />

        <TextView
            android:id="@+id/tv_student_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/iv_profile_pic"
            android:text="张三"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_constant1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_student_name"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/iv_profile_pic"
            android:text="用户名：" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_student_name"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/tv_constant1"
            android:text="Alex313"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_constant2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_constant1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/iv_profile_pic"
            android:text="邮箱："
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_username"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/tv_constant2"
            android:text="alexzhang@gmail.com"
            android:textColor="@color/color_gray"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_constant3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_constant2"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/iv_profile_pic"
            android:text="学校："
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_email"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/tv_constant3"
            android:text="华南理工大学"
            android:textColor="@color/color_gray"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_constant4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_constant3"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/iv_profile_pic"
            android:text="学号："
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_student_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_school"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/tv_constant4"
            android:text="201930381102"
            android:textColor="@color/color_gray"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_edit_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_constant4"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/button_bg_selector"
            android:text="编辑资料"
            android:textColor="@color/black"
            android:textSize="18sp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_profile_card"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="55dp"
        android:background="@color/honeydew_orange"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/color_gray" />

        <Button
            android:id="@+id/btn_my_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="10dp"
            android:padding="15dp"
            android:text="我的订单"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="@drawable/item_bg_selector" />

        <Button
            android:id="@+id/btn_edit_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="10dp"
            android:layout_marginTop="20dp"
            android:padding="15dp"
            android:text="编辑地址"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="@drawable/item_bg_selector"/>

        <Button
            android:id="@+id/btn_wrong_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="10dp"
            android:layout_marginTop="20dp"
            android:padding="15dp"
            android:text="我的错题"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="@drawable/item_bg_selector" />

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="10dp"
            android:layout_marginTop="20dp"
            android:padding="15dp"
            android:text="退出登录"
            android:textColor="@color/price_red"
            android:textSize="20sp"
            android:background="@drawable/item_bg_selector" />


    </LinearLayout>

    <include layout="@layout/bottom_bar" />

</RelativeLayout>