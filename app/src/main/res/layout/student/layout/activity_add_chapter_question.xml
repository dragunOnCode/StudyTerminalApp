<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.admin.AddChapterQuestionActivity">

    <include layout="@layout/title_bar" />

    <RelativeLayout
        android:id="@+id/rl_question_search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.xuexiang.xui.widget.spinner.materialspinner.MaterialSpinner
            android:id="@+id/ms_course_name"
            style="@style/Material.SpinnerStyle"
            android:layout_alignParentLeft="true"
            android:enabled="true"
            app:ms_entries="@array/subject_type" />

        <com.xuexiang.xui.widget.spinner.materialspinner.MaterialSpinner
            android:id="@+id/ms_grade"
            style="@style/Material.SpinnerStyle"
            android:layout_marginHorizontal="10dp"
            android:layout_toRightOf="@id/ms_course_name"
            android:enabled="true"
            app:ms_entries="@array/grade_type" />

        <EditText
            android:id="@+id/et_search_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ms_course_name"
            android:layout_marginVertical="10dp"
            android:hint="输入查找的题目名称" />

        <com.xuexiang.xui.widget.button.roundbutton.RoundButton
            android:id="@+id/btn_search_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_search_content"
            android:layout_centerHorizontal="true"
            android:text="搜索"
            android:textColor="@color/white"
            app:rb_backgroundColor="@color/blue_color" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_constant1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@id/rl_question_search"
        android:text="题目列表"
        android:textColor="@color/smoky_black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_question_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_question_search"
        android:layout_toRightOf="@id/tv_constant1"
        android:text="总共 0 条结果"/>

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_constant1"
        android:layout_margin="20dp">
        <com.scwang.smart.refresh.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never" />
        <com.scwang.smart.refresh.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>

</RelativeLayout>