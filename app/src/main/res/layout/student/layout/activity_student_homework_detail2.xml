<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.student.StudentHomeworkDetail2Activity">

    <include layout="@layout/title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="65dp"
        android:layout_marginBottom="5dp"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/ps_color_transparent_white"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_homework_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:text="null"
                android:textColor="@color/smoky_black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ll_open_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_homework_name"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:text="开放时间"
                    android:textColor="@color/smoky_black" />

                <TextView
                    android:id="@+id/tv_open_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="5dp"
                    android:text="yyyy-MM-dd" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:text="-"
                    android:textColor="@color/smoky_black" />

                <TextView
                    android:id="@+id/tv_deadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="5dp"
                    android:text="yyyy-MM-dd" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_open_date_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_open_date"
                android:layout_marginVertical="5dp" />

            <LinearLayout
                android:id="@+id/ll_question_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_open_date_status"
                android:layout_marginVertical="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_constant1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已完成：" />

                <TextView
                    android:id="@+id/tv_finished_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/" />

                <TextView
                    android:id="@+id/tv_question_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_do_homework"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_question_count"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="开始作答" />

            <com.xuexiang.xui.widget.button.RippleView
                android:id="@+id/btn_question_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/btn_do_homework"
                app:rv_type="simpleRipple"
                android:layout_marginVertical="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@color/honeydew_orange"
                    android:gravity="center"
                    android:text="错题集"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </com.xuexiang.xui.widget.button.RippleView>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>