<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.admin.AddQuestionActivity">

    <include layout="@layout/title_bar" />

    <androidx.legacy.widget.Space
        android:id="@+id/space1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="55dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="5dp"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/space1"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:background="@color/ps_color_half_white"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_question_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="10dp"
                android:text="题干"
                android:textColor="@color/smoky_black"
                android:textSize="14sp" />

            <com.xuexiang.xui.widget.edittext.MultiLineEditText
                android:id="@+id/et_question_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_question_content"
                android:layout_marginTop="4dp"
                app:mlet_maxCount="400" />

            <TextView
                android:id="@+id/tv_choices_selection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/et_question_content"
                android:text="选项（按回车解析不同选项）"
                android:textColor="@color/smoky_black"
                android:textSize="14sp" />

            <com.xuexiang.xui.widget.edittext.MultiLineEditText
                android:id="@+id/et_choices_selection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_choices_selection"
                android:layout_marginTop="4dp"
                app:mlet_maxCount="400" />

            <TextView
                android:id="@+id/tv_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_choices_selection"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:text="科目"
                android:textColor="@color/smoky_black"
                android:textSize="14sp" />

            <com.xuexiang.xui.widget.spinner.materialspinner.MaterialSpinner
                android:id="@+id/ms_course_name"
                style="@style/Material.SpinnerStyle"
                android:layout_width="wrap_content"
                android:layout_below="@id/tv_course_name"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="10dp"
                android:enabled="true"
                app:ms_entries="@array/subject_type" />

            <TextView
                android:id="@+id/tv_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_choices_selection"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/ms_course_name"
                android:text="年级"
                android:textColor="@color/smoky_black"
                android:textSize="14sp" />

            <com.xuexiang.xui.widget.spinner.materialspinner.MaterialSpinner
                android:id="@+id/ms_grade"
                style="@style/Material.SpinnerStyle"
                android:layout_width="wrap_content"
                android:layout_below="@id/tv_grade"
                android:layout_toRightOf="@id/ms_course_name"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:enabled="true"
                app:ms_entries="@array/grade_type" />

            <TextView
                android:id="@+id/tv_question_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ms_course_name"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:text="类型"
                android:textColor="@color/smoky_black"
                android:textSize="14sp" />

            <com.xuexiang.xui.widget.spinner.materialspinner.MaterialSpinner
                android:id="@+id/ms_question_type"
                style="@style/Material.SpinnerStyle"
                android:layout_width="wrap_content"
                android:layout_below="@id/tv_question_type"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:enabled="true"
                app:ms_entries="@array/question_type" />

            <TextView
                android:id="@+id/tv_question_difficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ms_course_name"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/ms_question_type"
                android:text="难度"
                android:textColor="@color/smoky_black"
                android:textSize="14sp" />

            <com.xuexiang.xui.widget.spinner.materialspinner.MaterialSpinner
                android:id="@+id/ms_question_difficulty"
                style="@style/Material.SpinnerStyle"
                android:layout_width="wrap_content"
                android:layout_below="@id/tv_question_difficulty"
                android:layout_toRightOf="@id/ms_question_type"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:enabled="true"
                app:ms_entries="@array/question_difficulty" />

            <TextView
                android:id="@+id/tv_question_solution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ms_question_type"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="20dp"
                android:text="答案"
                android:textColor="@color/smoky_black"
                android:textSize="14sp" />

            <com.xuexiang.xui.widget.edittext.MultiLineEditText
                android:id="@+id/et_question_solution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_question_solution"
                android:layout_marginTop="4dp"
                app:mlet_maxCount="400" />

            <TextView
                android:id="@+id/tv_question_analysis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_question_solution"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="20dp"
                android:text="题目解析"
                android:textColor="@color/smoky_black"
                android:textSize="14sp" />

            <com.xuexiang.xui.widget.edittext.MultiLineEditText
                android:id="@+id/et_question_analysis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_question_analysis"
                android:layout_marginTop="4dp"
                app:mlet_maxCount="400" />

            <com.xuexiang.xui.widget.button.RippleView
                android:id="@+id/btn_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_question_analysis"
                android:layout_centerHorizontal="true"
                android:layout_marginVertical="10dp"
                app:rv_type="simpleRipple">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@color/emerald"
                    android:gravity="center"
                    android:text="确认新增"
                    android:textColor="@color/xui_config_color_white"
                    android:textSize="18sp" />

            </com.xuexiang.xui.widget.button.RippleView>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>