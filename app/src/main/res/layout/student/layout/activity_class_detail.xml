<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.student.ClassDetailActivity">

    <include layout="@layout/title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="65dp"
        android:layout_marginBottom="5dp"
        android:padding="10dp"
        android:scrollbars="none">

        <RelativeLayout
            android:id="@+id/rl_class_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/ps_color_transparent_white"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_class_name"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="15dp"
                android:text="学校"
                android:textColor="@color/smoky_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_class_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:text="班级名称"
                android:textColor="@color/smoky_black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_class_name"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/tv_school"
                android:text="科目"
                android:background="@color/xui_config_color_gray_9"
                android:textColor="@color/smoky_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_class_name"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/tv_course_name"
                android:text="年级"
                android:background="@color/xui_config_color_gray_9"
                android:textColor="@color/smoky_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_constant1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_school"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="20dp"
                android:text="课程描述"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_course_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_constant1"
                android:layout_marginTop="4dp"
                android:background="@color/almond_white"
                app:mlet_maxCount="400" />


            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/tv_course_description"
                android:layout_marginVertical="15dp"
                android:background="@color/ps_color_grey" />

            <TextView
                android:id="@+id/tv_textbook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line1"
                android:layout_marginVertical="10dp"
                android:text="班级教辅"
                android:textColor="@color/smoky_black" />


            <include
                android:id="@+id/book_item"
                layout="@layout/textbook_item"
                android:layout_below="@id/tv_textbook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/book_item"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="15dp"
                android:background="@color/ps_color_grey" />

            <TextView
                android:id="@+id/tv_resource"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line2"
                android:layout_marginVertical="10dp"
                android:text="资源列表"
                android:textColor="@color/smoky_black" />


            <com.xuexiang.xui.widget.layout.ExpandableLayout
                android:id="@+id/el_resource"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_resource"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                app:el_duration="300"
                app:el_expanded="false">

                <com.example.studyterminalapp.views.ResourceListView
                    android:id="@+id/rlv_list"
                    style="@style/TextStyle.Explain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:dividerHeight="8dp"
                    android:scrollbars="none" />
            </com.xuexiang.xui.widget.layout.ExpandableLayout>

            <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/el_resource"
                android:layout_marginVertical="15dp"
                android:background="@color/ps_color_grey" />

            <TextView
                android:id="@+id/tv_homework"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line3"
                android:layout_marginVertical="10dp"
                android:text="作业列表"
                android:textColor="@color/smoky_black" />

            <com.xuexiang.xui.widget.layout.ExpandableLayout
                android:id="@+id/el_homework"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_homework"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                app:el_duration="300"
                app:el_expanded="false">

                <com.example.studyterminalapp.views.HomeworkListView
                    android:id="@+id/hlv_list"
                    style="@style/TextStyle.Explain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:dividerHeight="8dp"
                    android:scrollbars="none" />
            </com.xuexiang.xui.widget.layout.ExpandableLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>