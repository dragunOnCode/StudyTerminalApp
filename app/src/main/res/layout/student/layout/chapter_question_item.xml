<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_question_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:text="x+y=5,x+2y=16,则x=_"
        android:textColor="@color/smoky_black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tv_question_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_question_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="4dp"
        android:text="填空题"
        android:textColor="@color/color_gray"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_question_difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_question_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/tv_question_type"
        android:text="简单"
        android:textColor="@color/color_gray"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_course_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_question_type"
        android:layout_marginHorizontal="10dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="数学"
        android:textColor="@color/color_gray"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_question_type"
        android:layout_marginHorizontal="10dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/tv_course_name"
        android:gravity="center"
        android:text="高一"
        android:textColor="@color/color_gray"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/navajo_white"
        android:text="删除"
        android:textColor="@color/price_red"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>